{% extends 'partials/_master.twig' %}

{% block main %}

    {% if record|default %}

        {# Output the `introduction` field. If it doesn't exist, 'default' to
           the full excerpt of the current Record #}
        
        {% include 'partials/_image.twig' with ({'image': record|image}) %}

        <blockquote class="quote-menu">{{ record.quote }}</blockquote>

        {% include 'partials/_image_background.twig' with ({'image_background': record|image}) %}

        

    {% endif %}

{% endblock main %}