{% extends 'partials/_master.twig' %}

{% block main %}

    {% if record|default %}

        {# Output the `introduction` field. If it doesn't exist, 'default' to
           the full excerpt of the current Record #}
        
        <figure class="home-image">{% include 'partials/_image.twig' with ({'image': record.image_ayn}) %}</figure>

        <blockquote class="quote-menu">{{ record.quote }}</blockquote>

        {% include 'partials/_image_background.twig' with ({'background_image': record.background_image}) %}

        

    {% endif %}

{% endblock main %}