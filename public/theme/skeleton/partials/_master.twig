<!DOCTYPE html>
<html lang="{{ htmllang() }}">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        {# make sure we always display a proper title: The record's title if there is one, appended with the
           sitename. If there is no title, we append the sitename with the payoff, if there is one. #}
        <title>
            {%- if record|default and record.title -%}
                {{- record.title ~ ' | ' -}}
            {%- endif -%}
            {{- config.get('general/sitename') -}}
            {%- if record|default == null and config.has('general/payoff') -%}
                {{- ' | ' ~ config.get('general/payoff') -}}
            {%- endif -%}
        </title>
        <link rel="stylesheet" href="{{ asset('css/simple.css') }}">
    </head>
    <body class="container">
    {{ include('partials/_header.twig') }}

    <main>
    {% block body %}

            {{ widgets('main_top') }}

            {% block main %}
            {% endblock main %}

            {{ widgets('main_bottom') }}

        {% endblock body %}
    </main>
    
    {% block aside %}
    {% endblock aside %}

    {{ include('partials/_footer.twig') }}
    {{ include('partials/_video_overlay.twig') }}

        <!-- must be above all other scipts -->
        <script src="https://unpkg.com/@popperjs/core@2"></script>
        <script src="https://unpkg.com/tippy.js@6"></script>
        <!-- must be above all other scipts end -->
    
       
        <script src="theme/skeleton/js/Tippy.js"></script>

        <script src="theme/skeleton/js/disablescroll.js"></script>
        <script src="theme/skeleton/js/video-overlay.js  "></script>
        <script src="https://kit.fontawesome.com/f00e0f6e3c.js" crossorigin="anonymous"></script>
        <script src="theme/skeleton/js/script.js"></script>
    </body>

</html>
